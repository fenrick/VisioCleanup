<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0-windows</TargetFramework>
        <UseWindowsForms>true</UseWindowsForms>
        <Authors>Jolyon Suthers</Authors>
        <Product>Serilog Sink RichTextWinForms</Product>
        <AnalysisLevel>preview</AnalysisLevel>
        <RunAnalyzersDuringBuild>true</RunAnalyzersDuringBuild>
        <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
        <RootNamespace>Serilog</RootNamespace>
        <Nullable>enable</Nullable>
        <LangVersion>default</LangVersion>
        <NeutralLanguage>en-AU</NeutralLanguage>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DocumentationFile>C:\Users\s770439\source\repos\VisioCleanup\Serilog.Sinks.RichTextWinForm\Serilog.Sinks.RichTextWinForm.xml</DocumentationFile>
    </PropertyGroup>

    <!-- StyleCop Analyzers configuration -->
    <PropertyGroup>
        <CodeAnalysisRuleSet>Serilog.Sinks.RichTextWinForm.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.333" PrivateAssets="all" />
        <AdditionalFiles Include="$(SolutionDir)stylecop.json" Link="stylecop.json" />
    </ItemGroup>

    <ItemGroup>
      <AdditionalFiles Include="..\.sonarlint\fenrick_visiocleanup\CSharp\SonarLint.xml" Link="SonarLint.xml" />
    </ItemGroup>

    <!-- SonarLink Analyzers configuration -->
    <!--    <ItemGroup>
        <PackageReference Include="SonarAnalyzer.CSharp" Version="8.22.0.31243" PrivateAssets="all" />
        <AdditionalFiles Include="$(SolutionDir)SonarLint.xml" Link="SonarLint.xml" />
    </ItemGroup> -->

    <!-- GCop Analyzers configuration -->
    <ItemGroup>
        <PackageReference Include="GCop.All.Common" Version="2.7.6" PrivateAssets="all" />
    </ItemGroup>

    <!-- Serilog Analyzers configuration -->
    <ItemGroup>
        <PackageReference Include="SerilogAnalyzer" Version="0.15.0" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations" Version="2021.1.0" />
        <PackageReference Include="Serilog" Version="2.10.1-dev-01285" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Sinks.RichTextWinForm\Resources\en-AU.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>en-AU.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Sinks.RichTextWinForm\Resources\en-AU.resx">
